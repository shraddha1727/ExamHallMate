{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "outDir": "./dist"
  },
  "include": [
    "api/_server.ts",
    "services/**/*.ts",
    "utils/**/*.ts"
  ],
  "ts-node": {
    "esm": true,
    "moduleResolution": "node"
  }
}